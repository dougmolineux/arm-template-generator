{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceBusSku": {
            "type": "string",
            "defaultValue": "Basic",
            "metadata": {
                "description": "The messaging tier for service Bus namespace"
            }
        },
        "serviceBusNamespaceName": {
            "type": "string",
            "defaultValue": "dd",
            "metadata": {
                "description": "Name of the Service Bus namespace"
            }
        },
        "serviceBusTopicName": {
            "type": "string",
            "defaultValue": "dd",
            "metadata": {
                "description": "Name of the Service Bus Topic"
            }
        },
        "serviceBusSubscriptionName": {
            "type": "string",
            "defaultValue": "d",
            "metadata": {
                "description": "Name of the Service Bus Topic Subscription"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "serviceBusRuleName": {
            "type": "string",
            "defaultValue": "myrule",
            "metadata": {
                "description": "Name of the Topic Level Authorization Rule, this will appear in the Azure Portal as a Shared Access Policy"
            }
        }
    },
    "variables": {
        "defaultSASKeyName": "myrule",
        "defaultAuthRuleResourceId": "[resourceId('Microsoft.ServiceBus/namespaces/topics/authorizationRules', parameters('serviceBusNamespaceName'), parameters('serviceBusTopicName'), parameters('serviceBusRuleName'))]",
        "sbVersion": "2017-04-01"
    },
    "resources": [
        {
            "apiVersion": "[variables('sbVersion')]",
            "name": "[parameters('serviceBusNamespaceName')]",
            "type": "Microsoft.ServiceBus/Namespaces",
            "location": "[parameters('location')]",
            "kind": "Messaging",
            "sku": {
                "name": "Standard"
            },
            "resources": [
                {
                    "apiVersion": "[variables('sbVersion')]",
                    "name": "[parameters('serviceBusTopicName')]",
                    "type": "Topics",
                    "dependsOn": [
                        "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]"
                    ],
                    "properties": {
                        "path": "[parameters('serviceBusTopicName')]"
                    },
                    "resources": [
                        {
                            "apiVersion": "[variables('sbVersion')]",
                            "name": "[parameters('serviceBusSubscriptionName')]",
                            "type": "Subscriptions",
                            "dependsOn": [
                                "[parameters('serviceBusTopicName')]"
                            ],
                            "properties": {}
                        },
                        {
                            "apiVersion": "[variables('sbVersion')]",
                            "name": "[parameters('serviceBusRuleName')]",
                            "type": "authorizationRules",
                            "dependsOn": [
                                "[parameters('serviceBusTopic')]"
                            ],
                            "properties": {
                                "Rights": [
                                    "Send",
                                    "Listen"
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ],
    "outputs": {
        "NamespaceDefaultConnectionString": {
            "type": "string",
            "value": "[listkeys(variables('defaultAuthRuleResourceId'), variables('sbVersion')).primaryConnectionString]"
        },
        "DefaultSharedAccessPolicyPrimaryKey": {
            "type": "string",
            "value": "[listkeys(variables('defaultAuthRuleResourceId'), variables('sbVersion')).primaryKey]"
        }
    }
}